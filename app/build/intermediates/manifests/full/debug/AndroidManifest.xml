<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.romanov.schedule"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ru.trohimchuk.schedule.AppController"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="ru.trohimchuk.schedule.src.IScheduleActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ru.trohimchuk.schedule.src.MainTabActivity" />
        <activity android:name="ru.trohimchuk.schedule.src.UpdateDialogActivity" />
        <activity android:name="ru.trohimchuk.schedule.src.UserInfoDialogActivity" />
        <activity android:name="ru.trohimchuk.schedule.src.ScheduleDayActivity" />
    </application>

</manifest>